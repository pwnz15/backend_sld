{
  "info": {
    "name": "Business Management API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n\t\"username\": \"admin\",\n\t\"password\": \"admin123\",\n\t\"role\": \"admin\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/register"
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n\t\"username\": \"admin\",\n\t\"password\": \"admin123\"\n}"
            },
            "url": "{{baseUrl}}/api/auth/login"
          }
        }
      ]
    },
    {
      "name": "Articles",
      "item": [
        {
          "name": "Create Article",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n\t\"Code\": \"ART001\",\n\t\"CodeBar\": \"123456789\",\n\t\"Designation\": \"Test Article\",\n\t\"Stock\": 100,\n\t\"Famille\": \"Test Family\",\n\t\"Marque\": \"Test Brand\",\n\t\"PrixAchatHT\": 50,\n\t\"TVA\": 20,\n\t\"PventeTTC\": 75\n}"
            },
            "url": "{{baseUrl}}/api/articles"
          }
        },
        {
          "name": "Get All Articles",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{baseUrl}}/api/articles"
          }
        },
        {
          "name": "Get Article by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{baseUrl}}/api/articles/{{articleId}}"
          }
        },
        {
          "name": "Update Article",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n\t\"Stock\": 150,\n\t\"PrixAchatHT\": 55\n}"
            },
            "url": "{{baseUrl}}/api/articles/{{articleId}}"
          }
        },
        {
          "name": "Delete Article",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{baseUrl}}/api/articles/{{articleId}}"
          }
        },
        {
          "name": "Import Articles",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "/path/to/articles.csv"
                }
              ]
            },
            "url": "{{baseUrl}}/api/articles/import"
          }
        },
        {
          "name": "Export Articles",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{baseUrl}}/api/articles/export"
          }
        }
      ]
    },
    {
      "name": "Clients",
      "item": [
        {
          "name": "Create Client",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n\t\"CodeClient\": \"CLI001\",\n\t\"Intitule\": \"Test Client\",\n\t\"Tel1\": \"1234567890\",\n\t\"Societe\": \"Test Company\",\n\t\"Mail\": \"test@example.com\",\n\t\"Adresse\": \"Test Address\"\n}"
            },
            "url": "{{baseUrl}}/api/clients"
          }
        },
        {
          "name": "Get All Clients",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/clients?page=1&limit=50&search=test",
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "50"
                },
                {
                  "key": "search",
                  "value": "test"
                }
              ]
            }
          }
        },
        {
          "name": "Get Client by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{baseUrl}}/api/clients/{{clientId}}"
          }
        },
        {
          "name": "Import Clients",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "/path/to/clients.csv"
                }
              ]
            },
            "url": "{{baseUrl}}/api/clients/import"
          }
        },
        {
          "name": "Export Clients",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{baseUrl}}/api/clients/export"
          }
        }
      ]
    },
    {
      "name": "Drivers",
      "item": [
        {
          "name": "Create Driver",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n\t\"name\": \"Test Driver\",\n\t\"phoneNumber\": \"1234567890\",\n\t\"licenses\": [{\n\t\t\"number\": \"LIC001\",\n\t\t\"type\": \"Class A\",\n\t\t\"expiryDate\": \"2024-12-31\"\n\t}],\n\t\"email\": \"driver@example.com\"\n}"
            },
            "url": "{{baseUrl}}/api/drivers"
          }
        },
        {
          "name": "Get All Drivers",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": "{{baseUrl}}/api/drivers"
          }
        }
      ]
    },
    {
      "name": "Invoices",
      "item": [
        {
          "name": "Create Invoice",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n\t\"clientId\": \"{{clientId}}\",\n\t\"companyId\": \"{{companyId}}\",\n\t\"driverId\": \"{{driverId}}\",\n\t\"items\": [{\n\t\t\"articleId\": \"{{articleId}}\",\n\t\t\"quantity\": 5,\n\t\t\"unitPrice\": 100,\n\t\t\"discount\": 10,\n\t\t\"tva\": 20\n\t}],\n\t\"dueDate\": \"2024-12-31\"\n}"
            },
            "url": "{{baseUrl}}/api/invoices"
          }
        },
        {
          "name": "Get All Invoices",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/invoices?page=1&limit=50&status=PENDING&startDate=2024-01-01&endDate=2024-12-31",
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "50"
                },
                {
                  "key": "status",
                  "value": "PENDING"
                },
                {
                  "key": "startDate",
                  "value": "2024-01-01"
                },
                {
                  "key": "endDate",
                  "value": "2024-12-31"
                }
              ]
            }
          }
        },
        {
          "name": "Update Invoice",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n\t\"status\": \"PAID\",\n\t\"paymentMethod\": \"CASH\",\n\t\"paymentDate\": \"2024-01-15\"\n}"
            },
            "url": "{{baseUrl}}/api/invoices/{{invoiceId}}"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000"
    },
    {
      "key": "token",
      "value": "your_jwt_token_here"
    },
    {
      "key": "articleId",
      "value": "article_id_here"
    },
    {
      "key": "clientId",
      "value": "client_id_here"
    },
    {
      "key": "driverId",
      "value": "driver_id_here"
    },
    {
      "key": "companyId",
      "value": "company_id_here"
    },
    {
      "key": "invoiceId",
      "value": "invoice_id_here"
    }
  ]
}